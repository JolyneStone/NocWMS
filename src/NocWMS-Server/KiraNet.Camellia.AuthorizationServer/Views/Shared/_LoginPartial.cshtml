@using KiraNet.Camellia.AuthorizationServer.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    bool signedOut = ViewData["signed-out"] != null && (bool)ViewData["signed-out"];
}  
@if (SignInManager.IsSignedIn(User) && !signedOut)
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="nav navbar-nav navbar-right my-2 my-lg-0">
        <ul class="nav navbar-nav pull-right">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link">Sign out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav pull-right">
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Sign up</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Sign in</a></li>
    </ul>
}

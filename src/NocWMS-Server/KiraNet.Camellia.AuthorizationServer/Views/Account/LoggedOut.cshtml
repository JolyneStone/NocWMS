@using KiraNet.Camellia.AuthorizationServer.Quickstart.Account
@model KiraNet.Camellia.AuthorizationServer.Quickstart.Account.LoggedOutViewModel

@{ 
    ViewData["signed-out"] = true;
}

<div class="page-header logged-out">
    <h1>
        Log out
        <small>You're out of the system.</small>
    </h1>

    @if (Model.PostLogoutRedirectUri != null)
    {
    <div>
        Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">here</a> to return to the system
        <span>@Model.ClientName</span> System.
    </div>
    }

    @if (Model.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
